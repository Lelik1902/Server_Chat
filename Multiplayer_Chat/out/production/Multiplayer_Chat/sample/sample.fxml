                   promptText="Print something here"/>
        <ScrollPane fx:id="scrollPane" layoutX="9.0" layoutY="9.0" prefHeight="337.0" prefWidth="582.0">
            <TextFlow fx:id="ChatViewier" prefHeight="335.0" prefWidth="579.0"/>
