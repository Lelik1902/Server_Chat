        <Button fx:id="btnSendFile" layoutX="402.0" layoutY="351.0" mnemonicParsing="false" onAction="#onBtnSendFile"
                prefHeight="31.0" prefWidth="93.0" text="Send Files"/>
    </AnchorPane>
</VBox>
